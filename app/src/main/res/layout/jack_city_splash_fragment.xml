<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jcp_background"
    tools:context=".jcsplash.JackCitySplash">

    <ImageView
        android:id="@+id/jcp_logo"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:src="@drawable/jcp_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <com.agrawalsuneet.dotsloader.loaders.LazyLoader
        android:id="@+id/jcp_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jcp_logo"
        app:lazyloader_animDur="800"
        app:lazyloader_dotsDist="10dp"
        app:lazyloader_dotsRadius="16dp"
        app:lazyloader_firstDelayDur="150"
        app:lazyloader_firstDotColor="#AA00FF"
        app:lazyloader_secondDelayDur="300"
        app:lazyloader_secondDotColor="#D500F9"
        app:lazyloader_thirdDotColor="#E040FB" />
</androidx.constraintlayout.widget.ConstraintLayout>